<library path="lib/libruvu_mcl_rviz_plugins">
  <class name="ruvu_mcl_rviz_plugins/AddLandmarkWithId"
         type="ruvu_mcl_rviz_plugins::AddLandmarkTool"
         base_class_type="rviz::Tool">
    <description>
      Add a new landmark with ID to the landmark server
    </description>
  </class>

  <class name="ruvu_mcl_rviz_plugins/RemoveLandmark"
         type="rviz::PointTool"
         base_class_type="rviz::Tool">
    <description>
      Removes a landmark from the landmark server
    </description>
  </class>

  <class name="ruvu_mcl_rviz_plugins/Landmark"
         type="ruvu_mcl_rviz_plugins::LandmarkDisplay"
         base_class_type="rviz::Display">
    <description>
      Display landmarks
    </description>
    <message_type>ruvu_mcl_msgs/LandmarkList</message_type>
  </class>
</library>
